# Environment Variables Template for Deployment
# 
# Usage:
# 1. Copy this file and rename based on your deployment method
# 2. Fill in your actual values
# 3. Never commit files with real credentials!

# ============================================================================
# REQUIRED: Google Cloud Vision API
# ============================================================================
# Get from: Google Cloud Console > IAM & Admin > Service Accounts
# Format: Single-line JSON string (all newlines must be \n)
GOOGLE_CLOUD_VISION_CREDENTIALS_JSON: |
  {"type":"service_account","project_id":"your-project-id","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"your-service-account@your-project.iam.gserviceaccount.com","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40your-project.iam.gserviceaccount.com"}

# ============================================================================
# REQUIRED: Groq API Key
# ============================================================================
# Get from: https://console.groq.com/keys
GROQ_API_KEY: 'gsk_your_groq_api_key_here'

# ============================================================================
# OPTIONAL: OpenAI API Key (if using OpenAI instead of Groq)
# ============================================================================
# OPENAI_API_KEY: 'sk-your-openai-api-key-here'

# ============================================================================
# OPTIONAL: Streamlit Configuration
# ============================================================================
# These are usually auto-configured by hosting platforms
# STREAMLIT_SERVER_PORT: '8501'
# STREAMLIT_SERVER_ADDRESS: '0.0.0.0'
# STREAMLIT_SERVER_HEADLESS: 'true'

